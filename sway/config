# Define a tecla Mod4 (geralmente a tecla Super ou Windows) como $mod
set $mod Mod4

# Define que o modificador para a janela flutuante é a tecla $mod (Super/Windows)
floating_modifier $mod

# Fecha a janela ativa ao pressionar $mod+w
bindsym $mod+w kill

# Alterna a janela ativa para o modo tela cheia ao pressionar $mod+f
bindsym $mod+f fullscreen toggle 

# Alterna a janela ativa entre os modos flutuante e tiling ao pressionar $mod+Shift+space
bindsym $mod+Shift+space floating toggle

# A1lterna para a área de trabalho (workspace) número $ws1 ao pressionar $mod+1
set $wsGrave "Grave"
bindsym $mod+Grave workspace $wsGrave
bindsym $mod+Shift+Grave move container to workspace $wsGrave

set $ws1 "1"
bindsym $mod+1 workspace number $ws1
bindsym $mod+Shift+1 move container to workspace number $ws1

set $ws2 "2"
bindsym $mod+2 workspace number $ws2
bindsym $mod+Shift+2 move container to workspace number $ws2

set $ws3 "3"
bindsym $mod+3 workspace number $ws3
bindsym $mod+Shift+3 move container to workspace number $ws3

# sair do i3 ou sway
# bindsym $mod+Shift+e exec i3-msg exit
bindsym $mod+Shift+i exec swaymsg exit

# akil

# Reinicia o gerenciador de janelas ao pressionar
bindsym $mod+Shift+r reload

# Start your launcher
bindsym $mod+d exec $menu

# Start a terminal
bindsym $mod+Return exec $$term

# Your preferred terminal emulator
set $term alacritty 
# --config-file /etc/alacritty/alacritty.toml

include /etc/sway/config.d/*.conf
# include ~/.config/sway/config.d/*

