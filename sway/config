# iniciar a tualizasao
# exec sudo xbps-install -Syu
# exec sudo flatpak update
# exec sudo zypper dup

# Programas para iniciar no boot
exec firefox 
exec ~/.millennium/start.sh
# exec alacritty -e sudo lvim

# Executar o script de salvamento a cada hora
# exec  flatpak run com.unity.UnityHub
# exec  gnome-boxes

# atalhos para executar aplicativos voidlinux>dbus-launch
bindsym {
$mod+n exec firefox       
$mod+g exec gnome-boxes
# Github shdwmtr
$mod+s exec ~/.millennium/start.sh
# -startup -console steam://open/games
$mod+h exec flatpak run com.heroicgameslauncher.hgl
$mod+b exec flatpak run org.upbge.UPBGE
# $mod+x exec audacity # flatpak run org.audacityteam.Audacity
$mod+v exec steam steam://rungameid/438100
$mod+u exec steam steam://rungameid/15077473836418990080
$mod+m exec prismlauncher
$mod+l exec alacritty -e sudo lvim
}

# pula musica
bindsym {
$mod+q exec playerctl pause
$mod+r exec playerctl play
$mod+a exec playerctl next
$mod+z exec playerctl previous
}

# mute ou ativo microfone
# bindsym $mod+Tab exec pactl set-source-mute alsa_input.pci-0000_05_00.6.analog-stereo 1
# bindsym $mod+F5 exec pactl set-source-mute alsa_input.pci-0000_05_00.6.analog-stereo 0

# teclas para desligar ou reiniciar voidlinux zzz
bindsym {
$mod+p exec sudo systemctl suspend
$mod+Shift+o exec sudo reboot
}

# Controle de volume
bindsym {
$mod+F1 exec pactl set-sink-volume @DEFAULT_SINK@ +3% 
$mod+F3 exec pactl set-sink-volume @DEFAULT_SINK@ -3%
}

# Atalhos para ajustar o volume do microfone
# bindsym $mod+F2 exec pactl set-source-volume @DEFAULT_SOURCE@ +20% 
# bindsym $mod+F4 exec pactl set-source-volume @DEFAULT_SOURCE@ -20% 

# para botar em 8% o volume
# exec pactl set-sink-volume 0 8%
exec pactl set-source-volume alsa_input.pci-0000_05_00.6.analog-stereo 100%

# Configuração do Mouse
input type:pointer {
    accel_profile flat
}

# Configuração do Teclado (layouts: us, us)
input type:keyboard {
    xkb_layout us,us
}

# Configuração do assento
seat * hide_cursor 10000              
seat * hide_cursor when-typing enable

# Move a janela para o scratchpad
bindsym $mod+Shift+minus move scratchpad

# Mostra a janela do scratchpad (abnt2 apóstrofo)
# bindsym $mod+Grave scratchpad show

# Opacidade
bindsym $mod+x exec swaymsg opacity 0.4  
bindsym $mod+c exec swaymsg opacity 0.9  

