# Define a tecla Mod4 (geralmente a tecla Super ou Windows) como $mod
set $mod Mod4

# Define que o modificador para a janela flutuante é a tecla $mod (Super/Windows)
floating_modifier $mod

# Fecha a janela ativa ao pressionar $mod+w
bindsym $mod+w kill

# Alterna a janela ativa para o modo tela cheia ao pressionar $mod+f
bindsym $mod+f fullscreen toggle 

# Alterna a janela ativa entre os modos flutuante e tiling ao pressionar $mod+Shift+space
bindsym $mod+Shift+space floating toggle

# Define "1" como o nome da área de trabalho (workspace) $ws1
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"

# A1lterna para a área de trabalho (workspace) número $ws1 ao pressionar $mod+1
bindsym $mod+1 workspace number $ws1; bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+2 workspace number $ws2; bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+3 workspace number $ws3; bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+4 workspace number $ws4; bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+5 workspace number $ws5; bindsym $mod+Shift+5 move container to workspace number $ws5

# você realmente quer sair do i3?
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# akil

# Reinicia o gerenciador de janelas ao pressionar
    bindsym $mod+Shift+r reload

        # Start your launcher
    bindsym $mod+d exec $menu

        # Start a terminal
    bindsym $mod+Return exec $$term

# Your preferred terminal emulator
set $term alacritty --config-file /etc/alacritty/alacritty.toml

# include /etc/sway/config.d/*.conf
include ~/.config/sway/config.d/*

bar {
    # barra automaticamente
    mode hide
    # barra no topo
    position top
    # obter informações blocks
    status_command i3blocks
    # fonte
    font pango:DejaVu Sans Mono 8,9
    
    
     colors {
     background #181818
     statusline #ffffff
     separator #555555
     focused_workspace #333333 #333333 #ffffff
     active_workspace #333333 #333333 #ffffff
     inactive_workspace #181818 #181818 #ffffff
     urgent_workspace #2f343f #ebcb8b #2f343f
    }
}

# Desativa bordas da janelas
for_window [class=".*"] border none
for_window [class="firefox"] move to workspace 1
for_window [class="Code"] move to workspace 2
for_window [class="steam"] move to workspace 3
for_window [class="heroic"] move to workspace 3
for_window [class="unity"] move to workspace 4
for_window [class="Unity"] move to workspace 4
for_window [class="gnome-boxes"] move to workspace 5

# Reduzir automaticamente a nova janela em modo tiling, sem afetar janelas flutuantes
for_window [tiling] resize shrink width 200 px or 20 ppt; resize shrink height 200 px or 20 pptt

