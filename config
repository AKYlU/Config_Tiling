# Programas para iniciar no boot
exec firefox # flatpak run org.mozilla.firefox
exec steam # flatpak run com.valvesoftware.Steam
exec alacritty -e lvim

# Executar o script de salvamento a cada hora
exec sh -c 'while true; do ~/save_state.sh; sleep 3600; done'
# exec  flatpak run com.unity.UnityHub
# exec  gnome-boxes

# atalhos para executar aplicativos ## dbus-launch
bindsym $mod+n exec firefox # flatpak run org.mozilla.firefox             
bindsym $mod+g exec gnome-boxes
bindsym $mod+s exec steam # flatpak run com.valvesoftware.Steam
bindsym $mod+h exec flatpak run com.heroicgameslauncher.hgl
bindsym $mod+b exec flatpak run org.upbge.UPBGE
# bindsym $mod+x exec audacity # flatpak run org.audacityteam.Audacity
bindsym $mod+v exec steam steam://rungameid/438100
bindsym $mod+u exec flatpak run com.unity.UnityHub
bindsym $mod+m exec prismlauncher # flatpak run org.prismlauncher.PrismLauncher
bindsym $mod+l exec alacritty -e sudo lvim

# pula musica
bindsym $mod+q exec playerctl pause
bindsym $mod+r exec playerctl play
bindsym $mod+a exec playerctl next
bindsym $mod+z exec playerctl previous

# mute ou ativo microfone
# bindsym $mod+Tab exec pactl set-source-mute alsa_input.pci-0000_05_00.6.analog-stereo 1
# bindsym $mod+F5 exec pactl set-source-mute alsa_input.pci-0000_05_00.6.analog-stereo 0

# teclas para desligar ou reiniciar voidlinux zzz
bindsym $mod+p exec sudo systemctl suspend
bindsym $mod+Shift+o exec sudo reboot

# Controle de volume
bindsym $mod+F1 exec pactl set-sink-volume @DEFAULT_SINK@ +3% && notify-send "Volume" "$(pactl list sinks | grep 'Volume:' | head -n 1 | awk '{print $5}')"
bindsym $mod+F3 exec pactl set-sink-volume @DEFAULT_SINK@ -3% && notify-send "Volume" "$(pactl list sinks | grep 'Volume:' | head -n 1 | awk '{print $5}')"

# Atalhos para ajustar o volume do microfone
# bindsym $mod+F2 exec pactl set-source-volume @DEFAULT_SOURCE@ +20% && notify-send "Microfone" "$(pactl list sources | grep 'Volume:' | head -n 1 | awk '{print $5}')"
# bindsym $mod+F4 exec pactl set-source-volume @DEFAULT_SOURCE@ -20% && notify-send "Microfone" "$(pactl list sources | grep 'Volume:' | head -n 1 | awk '{print $5}')"

# para botar em 17% o volume
exec pactl set-sink-volume 0 8%
exec pactl set-source-volume alsa_input.pci-0000_05_00.6.analog-stereo 100%

# focus_follows_mouse no
input type:pointer {
    accel_profile flat
}

input type:keyboard {
    xkb_layout us,us
}

seat * hide_cursor 10000
seat * hide_cursor when-typing enable

