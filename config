# atalhos para executar aplicativos ## dbus-launch
bindsym $mod+n exec firefox # flatpak run org.mozilla.firefox             
bindsym $mod+g exec gnome-boxes
bindsym $mod+s exec flatpak run com.valvesoftware.Steam   #steam
bindsym $mod+h exec flatpak run com.heroicgameslauncher.hgl
bindsym $mod+b exec flatpak run org.upbge.UPBGE
# bindsym $mod+x exec flatpak run org.audacityteam.Audacity
bindsym $mod+v exec steam steam://rungameid/438100
bindsym $mod+u exec flatpak run com.unity.UnityHub
bindsym $mod+m exec flatpak run org.prismlauncher.PrismLauncher

# pula musica
bindsym $mod+q exec playerctl pause
bindsym $mod+r exec playerctl play
bindsym $mod+a exec playerctl next
bindsym $mod+z exec playerctl previous

# mute ou ativo microfone
# bindsym $mod+Tab exec pactl set-source-mute alsa_input.pci-0000_05_00.6.analog-stereo 1
# bindsym $mod+F5 exec pactl set-source-mute alsa_input.pci-0000_05_00.6.analog-stereo 0

# teclas para desligar ou reiniciar voidlinux zzz
bindsym $mod+p exec sudo systemctl suspend
bindsym $mod+Shift+o exec sudo reboot

# Controle de volume
bindsym $mod+F1 exec pactl set-sink-volume @DEFAULT_SINK@ +3% && notify-send "Volume" "$(pactl list sinks | grep 'Volume:' | head -n 1 | awk '{print $5}')"
bindsym $mod+F3 exec pactl set-sink-volume @DEFAULT_SINK@ -3% && notify-send "Volume" "$(pactl list sinks | grep 'Volume:' | head -n 1 | awk '{print $5}')"

# Atalhos para ajustar o volume do microfone
